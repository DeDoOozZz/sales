{% extends _layout %}
{% block content %}

    <div class="page-title">
        <div class="title-env">
            <h1 class="title">{{ lang('menu_' ~ that._table) }}</h1>
            <p class="description"></p>
        </div>
        <div class="breadcrumb-env"></div>
    </div>

    <!-- Admin Table-->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ lang('menu_' ~ that._table) }}</h3>
        </div>
        <div class="panel-body">
            {% if (validation_errors()) %}
            <div class="alert alert-danger">
                {{ validation_errors() }}
            </div>
            {% endif %}
            <form role="form" class="form-horizontal" role="form" method="post" enctype="multipart/form-data">

                
                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="message_id">{{ lang('messages_message_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('message_id', set_value('message_id', item.message_id), 'class="form-control" id="message_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="message_type_id">{{ lang('messages_message_type_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('message_type_id', set_value('message_type_id', item.message_type_id), 'class="form-control" id="message_type_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="client_id">{{ lang('messages_client_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('client_id', set_value('client_id', item.client_id), 'class="form-control" id="client_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="name_en">{{ lang('messages_name_en') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('name_en', set_value('name_en', item.name_en), 'class="form-control" id="name_en"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="name_ar">{{ lang('messages_name_ar') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('name_ar', set_value('name_ar', item.name_ar), 'class="form-control" id="name_ar"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="content_en">{{ lang('messages_content_en') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('content_en', set_value('content_en', item.content_en), 'class="form-control" id="content_en"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="content_ar">{{ lang('messages_content_ar') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('content_ar', set_value('content_ar', item.content_ar), 'class="form-control" id="content_ar"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="datetime">{{ lang('messages_datetime') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('datetime', set_value('datetime', item.datetime), 'class="form-control" id="datetime"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="submit" class="btn btn-secondary " name="submit" value="{{ lang('global_submit') }}">
                        <a href="{{ admin_url(that._table ~ '/index') }} "
                           class="btn btn-danger">{{ lang('global_cancel') }}</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}