                    <label class="col-sm-2 control-label" for="card_type_id">{{ lang('prepaid_card_types_card_type_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('card_type_id', set_value('card_type_id', item.card_type_id), 'class="form-control" id="card_type_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
                    <label class="col-sm-2 control-label" for="image">{{ lang('prepaid_card_types_image') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('image', set_value('image', item.image), 'class="form-control" id="image"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>
                

                    <div class="form-group">
