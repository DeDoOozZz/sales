{% extends _layout %}
{% block content %}

    <div class="page-title">
        <div class="title-env">
            <h1 class="title">{{ lang('menu_' ~ that._table) }}</h1>

            <p class="description"></p>
        </div>
        <div class="breadcrumb-env"></div>
    </div>

    <!-- Admin Table-->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ lang('menu_' ~ that._table) }}</h3>
        </div>
        <div class="panel-body">
            {% if (validation_errors()) %}
                <div class="alert alert-danger">
                    {{ validation_errors() }}
                </div>
            {% endif %}
            <form role="form" class="form-horizontal" role="form" method="post" enctype="multipart/form-data">


                <div class="form-group">
                    <label class="col-sm-1 control-label" for="save_data">{{ lang('format_orders_save_data') }}</label>

                    <div class="col-sm-3">
                        {{ form_dropdown('save_data', ddboolean(), set_value('save_data', item.save_data), 'class="form-control" id="save_data"') }}
                    </div>

                    <label class="col-sm-1 control-label" for="original_software">{{ lang('format_orders_original_software') }}</label>

                    <div class="col-sm-3">
                        {{ form_dropdown('original_software', ddboolean(), set_value('original_software', item.original_software), 'class="form-control" id="original_software"') }}
                    </div>

                    <label class="col-sm-1 control-label" for="mark_id">{{ lang('format_orders_mark_id') }}</label>

                    <div class="col-sm-3">
                        {{ form_dropdown('mark_id', marks, set_value('mark_id', item.mark_id), 'class="form-control" id="mark_id"') }}
                    </div>

                </div>
                <div class="form-group-separator"></div>




                <div class="form-group">

                    <label class="col-sm-1 control-label" for="mobile">{{ lang('format_orders_mobile') }}</label>

                    <div class="col-sm-5">
                        {{ form_input('mobile', set_value('mobile', item.mobile), 'class="form-control" id="mobile"') }}
                    </div>

                    <label class="col-sm-1 control-label" for="password">{{ lang('format_orders_password') }}</label>

                    <div class="col-sm-5">
                        {{ form_input('password', set_value('password', item.password), 'class="form-control" id="password"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>

                <div class="form-group">
                    <label class="col-sm-1 control-label" for="notes">{{ lang('format_orders_notes') }}</label>

                    <div class="col-sm-11">
                        {{ form_textarea('notes', set_value('notes', item.notes), 'class="form-control" id="notes"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>














































                <div class="form-group">
                    <label class="col-sm-1 control-label" for="status">{{ lang('format_orders_status') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('status', set_value('status', item.status), 'class="form-control" id="status"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="f_step">{{ lang('format_orders_f_step') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('f_step', set_value('f_step', item.f_step), 'class="form-control" id="f_step"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="s_step">{{ lang('format_orders_s_step') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('s_step', set_value('s_step', item.s_step), 'class="form-control" id="s_step"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="invoice_id">{{ lang('format_orders_invoice_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('invoice_id', set_value('invoice_id', item.invoice_id), 'class="form-control" id="invoice_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>






                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="format_price">{{ lang('format_orders_format_price') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('format_price', set_value('format_price', item.format_price), 'class="form-control" id="format_price"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="format_commission_first">{{ lang('format_orders_format_commission_first') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('format_commission_first', set_value('format_commission_first', item.format_commission_first), 'class="form-control" id="format_commission_first"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="format_commission_second">{{ lang('format_orders_format_commission_second') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('format_commission_second', set_value('format_commission_second', item.format_commission_second), 'class="form-control" id="format_commission_second"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="branch_id">{{ lang('format_orders_branch_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('branch_id', set_value('branch_id', item.branch_id), 'class="form-control" id="branch_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>









                <div class="form-group">
                    <label class="col-sm-10 control-label"></label>

                    <div class="col-sm-2">
                        <input type="submit" class="btn btn-secondary" name="submit"
                               value="{{ lang('global_submit') }}">
                        <a href="{{ admin_url(that._table ~ '/index') }}"
                           class="btn btn-danger">{{ lang('global_cancel') }}</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}