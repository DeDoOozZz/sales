{% extends _layout %}
{% block content %}

    <div class="page-title">
        <div class="title-env">
            <h1 class="title">{{ lang('menu_' ~ that._table) }}</h1>

            <p class="description"></p>
        </div>
        <div class="breadcrumb-env"></div>
    </div>

    <!-- Admin Table-->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ lang('menu_' ~ that._table) }}</h3>
        </div>
        <div class="panel-body">
            {% if (validation_errors()) %}
                <div class="alert alert-danger">
                    {{ validation_errors() }}
                </div>
            {% endif %}
            <form role="form" class="form-horizontal" role="form" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="form-group col-sm-5">
                        <label class="col-sm-3 control-label"
                               for="card_type_id">{{ lang('prepaid_card_orders_card_type_id') }}</label>

                        <div class="col-sm-9">
                            {#                        {{ form_dropdown('prepaid_card_order_id', prepaid_card_types, set_value('prepaid_card_order_id', item.prepaid_card_order_id), 'class="form-control" id="prepaid_card_order_id"') }}#}
                            <select class="form-control select2">
                                <option>type</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group col-sm-5">
                        <label class="col-sm-3 control-label"
                               for="card_type_id">{{ lang('prepaid_card_orders_prepaid_card_id') }}</label>

                        <div class="col-sm-9">
                            {#                        {{ form_dropdown('card_type_id', card_types, set_value('card_type_id', item.card_type_id), 'class="form-control" id="card_type_id"') }}#}
                            <select class="form-control select2">
                                <option>type</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group col-sm-2">
                        <label class="col-sm-7 control-label"
                               for="prepaid_card_id">price</label>
                        <div class="col-sm-5 for-card-price">
                            {#                            {{ form_input('prepaid_card_id', set_value('prepaid_card_id', item.prepaid_card_id), 'class="form-control" id="prepaid_card_id"') }}#}
                            <span>1000</span>
                        </div>
                    </div>
                </div>


                <div class="form-group-separator"></div>

                <div class="row">
                    <div class="form-group col-sm-5"></div>
                    <div class="form-group col-sm-5">
                        <label class="col-sm-3 control-label"
                               for="card_type_id">QTY</label>

                        <div class="col-sm-9">
                            {#                        {{ form_dropdown('card_type_id', card_types, set_value('card_type_id', item.card_type_id), 'class="form-control" id="card_type_id"') }}#}
                            <input type="number" class="form-control">
                        </div>
                    </div>

                    <div class="form-group col-sm-2">
                        <label class="col-sm-7 control-label"
                               for="prepaid_card_id">{{ lang('prepaid_card_orders_total_cards') }}</label>
                        <div class="col-sm-5 for-card-price">
                            {#                            {{ form_input('prepaid_card_id', set_value('prepaid_card_id', item.prepaid_card_id), 'class="form-control" id="prepaid_card_id"') }}#}
                            <span>5000</span>
                        </div>
                    </div>
                </div>
                <div class="form-group-separator"></div>

                <div class="row">
                    <div class="form-group col-sm-5"></div>
                    <div class="form-group col-sm-5">
                        <label class="col-sm-3 control-label"
                               for="card_type_id">paid</label>

                        <div class="col-sm-9">
                            {#                        {{ form_dropdown('card_type_id', card_types, set_value('card_type_id', item.card_type_id), 'class="form-control" id="card_type_id"') }}#}
                            <input type="text" class="form-control">
                        </div>
                    </div>

                    <div class="form-group col-sm-2">
                        <label class="col-sm-7 control-label"
                               for="prepaid_card_id">remaining</label>
                        <div class="col-sm-5 for-card-price">
                            {#                            {{ form_input('prepaid_card_id', set_value('prepaid_card_id', item.prepaid_card_id), 'class="form-control" id="prepaid_card_id"') }}#}
                            <span style="color:#bb0000">100</span>
                        </div>
                    </div>
                </div>
                <div class="form-group-separator"></div>







                <div class="form-group">
                    <label class="col-sm-10 control-label"></label>

                    <div class="col-sm-2">
                        <input type="submit" class="btn btn-secondary " name="submit"
                               value="{{ lang('global_submit') }}">
                        <a href="{{ admin_url(that._table ~ '/index') }} "
                           class="btn btn-danger">{{ lang('global_cancel') }}</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}