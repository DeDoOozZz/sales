{% extends _layout %}
{% block content %}

    <div class="page-title">
        <div class="title-env">
            <h1 class="title">{{ lang('menu_' ~ that._table) }}</h1>

            <p class="description"></p>
        </div>
        <div class="breadcrumb-env"></div>
    </div>

    <!-- Admin Table-->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ lang('menu_' ~ that._table) }}</h3>
        </div>
        <div class="panel-body">
            {% if (validation_errors()) %}
                <div class="alert alert-danger">
                    {{ validation_errors() }}
                </div>
            {% endif %}
            <form role="form" class="form-horizontal" role="form" method="post" enctype="multipart/form-data">


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="ticket_id">{{ lang('tickets_ticket_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('ticket_id', set_value('ticket_id', item.ticket_id), 'class="form-control" id="ticket_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="title">{{ lang('tickets_title') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('title', set_value('title', item.title), 'class="form-control" id="title"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="department_id">{{ lang('tickets_department_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('department_id', set_value('department_id', item.department_id), 'class="form-control" id="department_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="ticket_status_id">{{ lang('tickets_ticket_status_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('ticket_status_id', set_value('ticket_status_id', item.ticket_status_id), 'class="form-control" id="ticket_status_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="client_id">{{ lang('tickets_client_id') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('client_id', set_value('client_id', item.client_id), 'class="form-control" id="client_id"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="content">{{ lang('tickets_content') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('content', set_value('content', item.content), 'class="form-control" id="content"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label" for="datetime">{{ lang('tickets_datetime') }}</label>

                    <div class="col-sm-10">
                        {{ form_input('datetime', set_value('datetime', item.datetime), 'class="form-control" id="datetime"') }}
                    </div>
                </div>
                <div class="form-group-separator"></div>


                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>

                    <div class="col-sm-10">
                        <input type="submit" class="btn btn-secondary " name="submit"
                               value="{{ lang('global_submit') }}">
                        <a href="{{ admin_url(that._table ~ '/index') }} "
                           class="btn btn-danger">{{ lang('global_cancel') }}</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
{% endblock %}